<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.TodosFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTodoItems"
        android:layout_width="match_parent"
        android:layout_height="578dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTodoTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"


        android:layout_toStartOf="@+id/btnDeleteDoneTodos"
        app:layout_constraintBottom_toBottomOf="@+id/rvTodoItems" />

    <Button
        android:id="@+id/btnAddTodo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"


        android:layout_toEndOf="@+id/etTodoTitle"
        android:text="Add Todo"
        app:layout_constraintBottom_toBottomOf="@+id/rvTodoItems"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteDoneTodos"
        app:layout_constraintStart_toEndOf="@+id/etTodoTitle" />

    <Button
        android:id="@+id/btnDeleteDoneTodos"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:text="Delete done"
        app:layout_constraintBottom_toBottomOf="@+id/rvTodoItems"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>